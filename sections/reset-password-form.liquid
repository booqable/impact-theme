{{ "account.css" | asset_url | stylesheet_tag }}

{%- assign title                 = section.settings.title -%}
{%- assign description           = section.settings.description -%}
{%- assign email_label           = section.settings.email_label -%}
{%- assign back                  = section.settings.back -%}
{%- assign reset_password_label  = section.settings.reset_password_label -%}
{%- assign color_scheme          = section.settings.color_scheme -%}
{%- assign padding_top           = section.settings.padding_top -%}
{%- assign padding_bottom        = section.settings.padding_bottom -%}
{%- assign padding_top_mobile    = section.settings.padding_top_mobile -%}
{%- assign padding_bottom_mobile = section.settings.padding_bottom_mobile -%}

{% comment %} CSS variables start {% endcomment %}
{%- capture variables -%}
  {%- case padding_top -%}
    {%- when 'small' -%}
      --padding-top: 40px;
    {%- when 'medium' -%}
      --padding-top: 76px;
    {%- when 'large' -%}
      --padding-top: 112px;
  {%- endcase -%}

  {%- case padding_bottom -%}
    {%- when 'small' -%}
      --padding-bottom: 40px;
    {%- when 'medium' -%}
      --padding-bottom: 76px;
    {%- when 'large' -%}
      --padding-bottom: 112px;
  {%- endcase -%}

  {%- case padding_top_mobile -%}
    {%- when 'small' -%}
      --padding-top-mobile: 24px;
    {%- when 'medium' -%}
      --padding-top-mobile: 40px;
    {%- when 'large' -%}
      --padding-top-mobile: 60px;
  {%- endcase -%}

  {%- case padding_bottom_mobile -%}
    {%- when 'small' -%}
      --padding-bottom-mobile: 24px;
    {%- when 'medium' -%}
      --padding-bottom-mobile: 40px;
    {%- when 'large' -%}
      --padding-bottom-mobile: 60px;
  {%- endcase -%}
{%- endcapture -%}
{% comment %} CSS variables end {% endcomment %}

<div
  class="account color-{{ color_scheme.id }}{% if padding_top != blank or padding_top_mobile != blank %} account--padding-top{% endif %}{% if padding_bottom != blank or padding_bottom_mobile != blank %} account--padding-bottom{%- endif -%}"
  style="{{- variables | escape -}}"
>
  <div class="account__container container">
    <a href="{{ routes.login_url }}" class="account__breadcrumbs">
      <i class="fa-regular fa-chevron-left account__breadcrumbs-chevron"></i>
      {%- if back != blank -%}
        {{- back -}}
      {%- else -%}
        Back
      {%- endif -%}
    </a>

    <h3 class="account__title text-center">
      {%- if title != blank -%}
        {{- title -}}
      {%- else -%}
        Reset your password
      {%- endif -%}
    </h3>

    <div class="account__divider text-center">
      {%- if description != blank -%}
        {{- description -}}
      {%- else -%}
        Enter your email address below and we will send you an email with a link to create a new password
      {%- endif -%}
    </div>

    {%- form 'reset_password' -%}
      <div class="account-fieldset__block account__divider--small{% if form.errors.email %} account-fieldset--error{%- endif -%}">
        <label for="user_email" class="account-fieldset__label">
          {%- if email_label != blank -%}
            {{- email_label -}}
          {%- else -%}
            Email
          {%- endif -%}

          <span class="account-fieldset__label-backlight">
            {%- if email_label != blank -%}
              {{- email_label -}}
            {%- else -%}
              Email
            {%- endif -%}
          </span>
        </label>

        <input
          value="{{- form.email -}}"
          placeholder=" "
          class="account-fieldset__input"
          autofocus="autofocus"
          autocomplete="email"
          type="email"
          name="user[email]"
          id="user_email">

        <div class="account__error-message">
          {{- form.errors.email -}}
        </div>
      </div>

      <button
        type="submit"
        class="account__button button button--primary button--large"
        name="commit"
        data-disable-with="Send me reset password instructions"
      >
        {%- if reset_password_label != blank -%}
          {{- reset_password_label -}}
        {%- else -%}
          Reset password
        {%- endif -%}
      </button>
    {%- endform -%}
  </div>
</div>

{% include 'script-full-height' %}

