{%- unless section.blocks.size == 0 -%}

  {{ "logos.css" | asset_url | stylesheet_tag }}

  {%- assign title                 = section.settings.title -%}
  {%- assign text_position         = section.settings.text_position -%}
  {%- assign text_position_mobile  = section.settings.text_position_mobile -%}
  {%- assign color_palette         = section.settings.color_palette -%}
  {%- assign padding_top           = section.settings.padding_top -%}
  {%- assign padding_bottom        = section.settings.padding_bottom -%}
  {%- assign padding_top_mobile    = section.settings.padding_top_mobile -%}
  {%- assign padding_bottom_mobile = section.settings.padding_bottom_mobile -%}
  {%- assign image_placeholder     = settings.image_placeholder -%}

  {% comment %} CSS variables start {% endcomment %}
  {%- capture variables -%}
    {%- case padding_top -%}
      {%- when 'none' -%}
        --padding-top: 0;
      {%- when 'small' -%}
        --padding-top: 60px;
      {%- when 'medium' -%}
        --padding-top: 84px;
      {%- when 'large' -%}
        --padding-top: 96px;
    {%- endcase -%}

    {%- case padding_bottom -%}
      {%- when 'none' -%}
        --padding-bottom: 0;
      {%- when 'small' -%}
        --padding-bottom: 60px;
      {%- when 'medium' -%}
        --padding-bottom: 84px;
      {%- when 'large' -%}
        --padding-bottom: 96px;
    {%- endcase -%}

    {%- case padding_top_mobile -%}
      {%- when 'none' -%}
        --padding-top-mobile: 0;
      {%- when 'small' -%}
        --padding-top-mobile: 29px;
      {%- when 'medium' -%}
        --padding-top-mobile: 45px;
      {%- when 'large' -%}
        --padding-top-mobile: 60px;
    {%- endcase -%}

    {%- case padding_bottom_mobile -%}
      {%- when 'none' -%}
        --padding-bottom-mobile: 0;
      {%- when 'small' -%}
        --padding-bottom-mobile: 29px;
      {%- when 'medium' -%}
        --padding-bottom-mobile: 45px;
      {%- when 'large' -%}
        --padding-bottom-mobile: 60px;
    {%- endcase -%}

    {%- case text_position -%}
      {%- when 'left' -%}
        --flex-direction: row;
        --justify-content: flex-start;
        --align-items: flex-start;
        --padding: 0 0 0 36px;
        --text-align: left;
        --text-max-width: 280px;
      {%- when 'center' -%}
        --flex-direction: column;
        --justify-content: center;
        --align-items: center;
        --padding: 36px 0 0;
        --text-align: center;
        --text-max-width: none;
      {%- when 'right' -%}
        --flex-direction: row-reverse;
        --justify-content: flex-start;
        --align-items: flex-start;
        --padding: 0 36px 0 0;
        --text-align: right;
        --text-max-width: 280px;
    {%- endcase -%}

    {%- case text_position_mobile -%}
      {%- when 'left' -%}
        --text-align-mobile: left;
        --padding-x: 0;
      {%- when 'center' -%}
        --text-align-mobile: center;
        --padding-x: 16px;
      {%- when 'right' -%}
        --text-align-mobile: right;
        --padding-x: 0;
    {%- endcase -%}
  {%- endcapture -%}
  {% comment %} CSS variables end {% endcomment %}

  <div
    class="logos__wrapper{% if color_palette != blank %} palette-{{ color_palette }}{% endif %}{% if padding_top != blank or padding_top_mobile != blank %} logos__wrapper--padding-top{% endif %}{% if padding_bottom != blank or padding_bottom_mobile != blank %} logos__wrapper--padding-bottom{%- endif -%}"
    style="{{- variables | escape -}}"
  >
    <div class="logos__container container">
      <div class="logos__columns">
        {%- if title != blank -%}
          <div class="logos__col">
            <h2 class="logos__title h5">{{- title -}}</h2>
          </div>
        {%- endif -%}

        {%- if section.blocks.size >= 1 -%}
          <div class="logos__col logos__logos">
            {%- for block in section.blocks -%}
              {%- assign image = block.settings.image -%}

              {%- if image != blank -%}
                {%- assign image = image -%}
              {%- elsif image_placeholder != blank -%}
                {%- assign image = image_placeholder -%}
              {%- else -%}
                {%- assign image = blank -%}
              {%- endif -%}

              <div class="logos__image-wrapper{% if image == blank %} no-image{% endif %}" id="{{- block.id -}}">
                {%- if image.url != blank -%}
                  {%- render 'image',
                    image: image,
                    loading: 'lazy',
                    class: 'logos__image',
                    custom_width: '150',
                    custom_size: '150px'
                  -%}
                {%- endif -%}
              </div>
            {%- endfor -%}
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
{%- endunless -%}


