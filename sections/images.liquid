{%- if blocks.size > 0 -%}
  {{ "images.css" | asset_url | stylesheet_tag }}

  {%- assign color_palette         = section.settings.color_palette -%}
  {%- assign height                = section.settings.height -%}
  {%- assign padding_top           = section.settings.padding_top -%}
  {%- assign padding_bottom        = section.settings.padding_bottom -%}
  {%- assign padding_top_mobile    = section.settings.padding_top_mobile -%}
  {%- assign padding_bottom_mobile = section.settings.padding_bottom_mobile -%}
  {%- assign timer                 = section.settings.timer -%}
  {%- assign pause                 = section.settings.pause -%}
  {%- assign effect                = section.settings.effect -%}
  {%- assign datepicker_title      = section.settings.datepicker_title -%}
  {%- assign show_datepicker       = section.settings.show_datepicker -%}

  {%- assign carousel = false -%}

  {%- if blocks.size > 1 -%}
    {{ "carousel.css" | asset_url | stylesheet_tag }}

    {%- assign carousel = true -%}
  {%- endif -%}

  {%- if show_datepicker -%}
    {%- if color_palette == "one" -%}
      {%- if settings.accent_background != blank -%}
        {%- assign background_accent = settings.accent_background -%}
      {%- else -%}
        {%- assign background_accent = branding_color -%}
      {%- endif -%}
    {%- elsif color_palette == "two" -%}
      {%- if settings.accent_background_2 != blank -%}
        {%- assign background_accent = settings.accent_background_2 -%}
      {%- else -%}
        {%- assign background_accent = branding_color -%}
      {%- endif -%}
    {%- endif -%}
  {%- endif -%}

  {% comment %} CSS variables start {% endcomment %}
  {%- capture variables -%}
    {%- if carousel -%}
      --slide-width: 100%;
      --slide-width-mobile: 100%;
    {%- endif -%}

    {%- case height -%}
      {%- when 'small' -%}
        --height: 640px;
      {%- when 'medium' -%}
        --height: 790px;
      {%- when 'large' -%}
        --height: 940px;
      {%- when 'full' -%}
        --height: 100vh;
    {%- endcase -%}

    {%- case padding_top -%}
      {%- when 'none' -%}
        --padding-top: 0;
      {%- when 'small' -%}
        --padding-top: 24px;
      {%- when 'medium' -%}
        --padding-top: 35px;
      {%- when 'large' -%}
        --padding-top: 60px;
    {%- endcase -%}

    {%- case padding_bottom -%}
      {%- when 'none' -%}
        --padding-bottom: 0;
      {%- when 'small' -%}
        --padding-bottom: 24px;
      {%- when 'medium' -%}
        --padding-bottom: 35px;
      {%- when 'large' -%}
        --padding-bottom: 60px;
    {%- endcase -%}

    {%- case padding_top_mobile -%}
      {%- when 'none' -%}
        --padding-top-mobile: 0;
      {%- when 'small' -%}
        --padding-top-mobile: 24px;
      {%- when 'medium' -%}
        --padding-top-mobile: 32px;
      {%- when 'large' -%}
        --padding-top-mobile: 40px;
    {%- endcase -%}

    {%- case padding_bottom_mobile -%}
      {%- when 'none' -%}
        --padding-bottom-mobile: 0;
      {%- when 'small' -%}
        --padding-bottom-mobile: 24px;
      {%- when 'medium' -%}
        --padding-bottom-mobile: 32px;
      {%- when 'large' -%}
        --padding-bottom-mobile: 40px;
    {%- endcase -%}
  {%- endcapture -%}
  {% comment %} CSS variables end {% endcomment %}

  <div class="images__wrapper{% if height == "full" or height == "large" %} images__wrapper-full-height{% endif %}{% if show_datepicker %} images__wrapper-with-date-picker{% endif %}{% if color_palette != blank %} palette-{{ color_palette }}{%- endif -%}" style="{{- variables | escape -}}">
    {%- if carousel -%}
      <div class="carousel carousel__edges carousel__{{- effect -}}-effect{% if pause %} carousel__pause{% endif %}{% if show_datepicker %} carousel-with-date-picker{%- endif -%}" aria-label="Gallery">
        <input class="carousel__timer" type="hidden" name="hidden" value="{{- timer -}}">
        <div class="carousel__wrapper">
    {%- endif -%}

          {%- for block in blocks -%}
            {%- assign first                = forloop.first -%}
            {%- assign tag                  = block.settings.tag -%}
            {%- assign title                = block.settings.title -%}
            {%- assign description          = block.settings.description -%}
            {%- assign button_1             = block.settings.button_1 -%}
            {%- assign button_url_1         = block.settings.button_url_1 -%}
            {%- assign button_2             = block.settings.button_2 -%}
            {%- assign button_url_2         = block.settings.button_url_2 -%}
            {%- assign text_position        = block.settings.text_position -%}
            {%- assign text_position_mobile = block.settings.text_position_mobile -%}
            {%- assign video_url            = block.settings.video_url | strip -%}
            {%- assign image                = block.settings.image -%}
            {%- assign image_mobile         = block.settings.image_mobile -%}
            {%- assign overlay_opacity      = block.settings.overlay_opacity -%}
            {%- assign color_overlay        = block.settings.color_overlay -%}

            {% comment %} CSS variables start {% endcomment %}
            {%- capture text_variables -%}
              {%- case text_position -%}
                {%- when 'top-left' -%}
                  --text-justify-content: flex-start;
                  --text-align-items: flex-start;
                  --text-align: left;
                  --margin-bottom: 70px;
                  --margin-left: 0;
                  --margin-right: auto;
                  --padding-left: 0;
                  --padding-right: 37px;
                {%- when 'top-center' -%}
                  --text-justify-content: center;
                  --text-align-items: flex-start;
                  --text-align: center;
                  --margin-bottom: 70px;
                  --margin-left: auto;
                  --margin-right: auto;
                  --padding-left: 0;
                  --padding-right: 0;
                {%- when 'top-right' -%}
                  --text-justify-content: flex-end;
                  --text-align-items: flex-start;
                  --text-align: right;
                  --margin-bottom: 70px;
                  --margin-left: auto;
                  --margin-right: 0;
                  --padding-left: 37px;
                  --padding-right: 0;
                {%- when 'middle-left' -%}
                  --text-justify-content: flex-start;
                  --text-align-items: center;
                  --text-align: left;
                  --margin-bottom: 70px;
                  --margin-left: 0;
                  --margin-right: auto;
                  --padding-left: 0;
                  --padding-right: 37px;
                {%- when 'center' -%}
                  --text-justify-content: center;
                  --text-align-items: center;
                  --text-align: center;
                  --margin-bottom: 70px;
                  --margin-left: auto;
                  --margin-right: auto;
                  --padding-left: 0;
                  --padding-right: 0;
                {%- when 'middle-right' -%}
                  --text-justify-content: flex-end;
                  --text-align-items: center;
                  --text-align: right;
                  --margin-bottom: 70px;
                  --margin-left: auto;
                  --margin-right: 0;
                  --padding-left: 37px;
                  --padding-right: 0;
                {%- when 'bottom-left' -%}
                  --text-justify-content: flex-start;
                  --text-align-items: flex-end;
                  --text-align: left;
                  --margin-bottom: 70px;
                  --margin-left: 0;
                  --margin-right: auto;
                  --padding-left: 0;
                  --padding-right: 37px;
                {%- when 'bottom-center' -%}
                  --text-justify-content: center;
                  --text-align-items: flex-end;
                  --text-align: center;
                  --margin-bottom: 70px;
                  --margin-left: auto;
                  --margin-right: auto;
                  --padding-left: 0;
                  --padding-right: 0;
                {%- when 'bottom-right' -%}
                  --text-justify-content: flex-end;
                  --text-align-items: flex-end;
                  --text-align: right;
                  --margin-bottom: 70px;
                  --margin-left: auto;
                  --margin-right: 0;
                  --padding-left: 37px;
                  --padding-right: 0;
              {%- endcase -%}

              {%- case text_position_mobile -%}
                {%- when 'top-left' -%}
                  --text-justify-content-mobile: flex-start;
                  --text-align-items-mobile: flex-start;
                  --text-align-mobile: left;
                  --margin-bottom-mobile: 60px;
                  --margin-left-mobile: 0;
                  --margin-right-mobile: auto;
                {%- when 'top-center' -%}
                  --text-justify-content-mobile: center;
                  --text-align-items-mobile: flex-start;
                  --text-align-mobile: center;
                  --margin-bottom-mobile: 60px;
                  --margin-left-mobile: auto;
                  --margin-right-mobile: auto;
                {%- when 'top-right' -%}
                  --text-justify-content-mobile: flex-end;
                  --text-align-items-mobile: flex-start;
                  --text-align-mobile: right;
                  --margin-bottom-mobile: 60px;
                  --margin-left-mobile: auto;
                  --margin-right-mobile: 0;
                {%- when 'middle-left' -%}
                  --text-justify-content-mobile: flex-start;
                  --text-align-items-mobile: center;
                  --text-align-mobile: left;
                  --margin-bottom-mobile: 60px;
                  --margin-left-mobile: 0;
                  --margin-right-mobile: auto;
                {%- when 'center' -%}
                  --text-justify-content-mobile: center;
                  --text-align-items-mobile: center;
                  --text-align-mobile: center;
                  --margin-bottom-mobile: 60px;
                  --margin-left-mobile: auto;
                  --margin-right-mobile: auto;
                {%- when 'middle-right' -%}
                  --text-justify-content-mobile: flex-end;
                  --text-align-items-mobile: center;
                  --text-align-mobile: right;
                  --margin-bottom-mobile: 60px;
                  --margin-left-mobile: auto;
                  --margin-right-mobile: 0;
                {%- when 'bottom-left' -%}
                  --text-justify-content-mobile: flex-start;
                  --text-align-items-mobile: flex-end;
                  --text-align-mobile: left;
                  --margin-bottom-mobile: 60px;
                  --margin-left-mobile: 0;
                  --margin-right-mobile: auto;
                {%- when 'bottom-center' -%}
                  --text-justify-content-mobile: center;
                  --text-align-items-mobile: flex-end;
                  --text-align-mobile: center;
                  --margin-bottom-mobile: 60px;
                  --margin-left-mobile: auto;
                  --margin-right-mobile: auto;
                {%- when 'bottom-right' -%}
                  --text-justify-content-mobile: flex-end;
                  --text-align-items-mobile: flex-end;
                  --text-align-mobile: right;
                  --margin-bottom-mobile: 60px;
                  --margin-left-mobile: auto;
                  --margin-right-mobile: 0;
              {%- endcase -%}
            {%- endcapture -%}

            {%- capture image_variables -%}
              {%- if overlay_opacity != blank -%}
                --opacity-overlay: {{ overlay_opacity | append: "%"}};
              {%- endif -%}
            {%- endcapture -%}
            {% comment %} CSS variables end {% endcomment %}

            {%- if carousel -%}
              <div class="carousel__item overlay-{{ color_overlay }}{% if effect == 'fade' and first == false %} hide{% endif %}{% if effect == 'fade' and first %} show{%- endif -%}">
                <div class="carousel__inner">
            {%- endif -%}
                  <div
                    class="images__container container{% unless carousel %} overlay-{{ color_overlay }}{% endunless %}{% if padding_top != blank or padding_top_mobile != blank %} images__container--padding-top{% endif %}{% if padding_bottom != blank or padding_bottom_mobile != blank %} images__container--padding-bottom{%  endif %}"
                    style="{{- text_variables | escape -}}"
                  >
                    <div class="images__text-area">
                      <div class="images__content">
                        {%- if tag != blank -%}
                          <strong class="images__tag tagline">{{- tag -}}</strong>
                        {%- endif -%}

                        {%- if title != blank -%}
                          <h1 class="images__title bq-content rx-content">{{- title -}}</h1>
                        {%- endif -%}

                        {%- if description != blank -%}
                          <div class="images__description text-medium bq-content rx-content">{{- description | truncate: 150, " ..." -}}</div>
                        {%- endif -%}

                        {%- if button_1 != blank or button_2 != blank -%}
                          <div class="images__buttons">
                            {%- if button_1 != blank and button_url_1 != blank -%}
                              <a href="{{  button_url_1 }}" class="images__button button button--primary button--large">{{- button_1 -}}</a>
                            {%- endif -%}

                            {%- if button_2 != blank and button_url_2 != blank -%}
                              <a href="{{  button_url_2 }}" class="images__button button button--outlined button--large">{{- button_2 -}}</a>
                            {%- endif -%}
                          </div>
                        {%- endif -%}

                      </div>
                    </div>
                  </div>

                  <div class="images__vision" style="{{- image_variables | escape -}}">
                    {%- if video_url contains "youtube.com" -%}
                      {%- assign video_drop = video_url | split: "?v=" -%}
                      {%- assign video_id   = video_drop | last | strip -%}

                      <div class="images__vision-wrapper images__vision-wrapper--overlay">
                        <input id="video-{{- section.key -}}{{- block.id -}}" value="{{- video_id -}}" class="images__video-id" type="hidden" name="hidden">
                        <div id="player-{{- section.key -}}{{- block.id -}}" class="images__video"></div>
                      </div>

                    {%- elsif video_url contains "vimeo.com" -%}
                      {%- assign video_drop = video_url | split: "/" -%}
                      {%- assign video_id   = video_drop | last | strip -%}

                      <div class="images__vision-wrapper images__vision-wrapper--overlay">
                        <iframe
                          class="images__video"
                          src="https://player.vimeo.com/video/{{- video_id -}}?autoplay=1&muted=1&loop=1&autopause=0&controls=0&background=1"
                          width="1920"
                          height="1080"
                          frameborder="0"
                          allow="autoplay; fullscreen"
                          allowfullscreen
                          autoplay
                          muted
                          loop
                        ></iframe>
                      </div>

                    {%- elsif image != blank or image_mobile != blank -%}
                      {%- if image != blank -%}
                        <div class="images__vision-wrapper{% if image_mobile != blank %} images__vision-wrapper--desktop{% endif %} images__vision-wrapper--overlay">
                          {%- render 'image',
                            image: image,
                            loading: 'lazy',
                            class: 'images__image',
                            size: 'xxl'
                          -%}
                        </div>
                      {%- endif -%}

                      {%- if image_mobile != blank -%}
                        <div class="images__vision-wrapper images__vision-wrapper--mobile images__vision-wrapper--overlay">
                          {%- render 'image',
                            image: image,
                            loading: 'lazy',
                            class: 'images__image',
                            size: 'l'
                          -%}
                        </div>
                      {%- endif -%}
                    {%- endif -%}
                  </div>
            {%- if carousel -%}
                </div>
              </div>
            {%- endif -%}
          {%- endfor -%}

    {%- if carousel -%}
        </div>

        <div class="carousel__navigation" aria-label="Carousel navigation" aria-hidden="true">
          <span class="carousel__btn prev" title="Prev slide">
            Previous slide
            {%- render 'icon-arrow-right' -%}
          </span>
          <span class="carousel__btn next" title="Next slide">
            Next slide
            {%- render 'icon-arrow-right' -%}
          </span>
        </div>

        <div class="carousel__pagination" aria-label="Carousel pagination" aria-hidden="true">
          {%- for block in blocks -%}
            {%- assign first = forloop.first -%}
            {%- assign index = forloop.index -%}

            <span class="carousel__dot{% if first %} active{%- endif -%}" data-index="{{- index -}}" title="Jump to slide {{ index -}}">
              Go to slide {{ index -}}
            </span>
          {%- endfor -%}
        </div>

        <div class="carousel__counter">
          {%- for block in blocks -%}
            {%- assign length = forloop.length -%}
          {%- endfor -%}

          <span class="carousel__count">{%- if length < 10 -%}0{%- endif -%}1</span>
          <span class="carousel__divider">|</span>
          <span class="carousel__summary">{%- if length < 10 -%}0{%- endif -%}{{- length -}}</span>
        </div>
      </div>
    {%- endif -%}

    {%- if show_datepicker -%}
      <div class="images__date-picker date-picker">
        <div class="images__date-picker-container container">
          {%- if datepicker_title != blank -%}
            <h2 class="images__date-picker-title">
              <span class="images__date-picker-icon">
                {%- render 'icon-arrow-right-full' -%}
              </span>
              {{- datepicker_title -}}
            </h2>
          {%- endif -%}

          <div class="images__date-picker-component date-picker__component">
            {%- include 'date-picker' -%}
          </div>
        </div>

        <div class="images__date-picker-overlay"></div>
      </div>
    {%- endif -%}
  </div>
{%- endif -%}

