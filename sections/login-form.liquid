{{ "account.css" | asset_url | stylesheet_tag }}

{%- assign color_scheme          = section.settings.color_scheme -%}
{%- assign create_account_label  = section.settings.create_account_label -%}
{%- assign description           = section.settings.description -%}
{%- assign email_label           = section.settings.email_label -%}
{%- assign guest_label           = section.settings.guest_label -%}
{%- assign image                 = section.settings.image -%}
{%- assign image_opacity         = section.settings.image_opacity -%}
{%- assign login_label           = section.settings.login_label -%}
{%- assign password_label        = section.settings.password_label -%}
{%- assign padding_top           = section.settings.padding_top -%}
{%- assign padding_bottom        = section.settings.padding_bottom -%}
{%- assign padding_top_mobile    = section.settings.padding_top_mobile -%}
{%- assign padding_bottom_mobile = section.settings.padding_bottom_mobile -%}
{%- assign reset_password_label  = section.settings.reset_password_label -%}
{%- assign rounded_corners       = section.settings.rounded_corners -%}
{%- assign show_border           = section.settings.show_border -%}
{%- assign title                 = section.settings.title -%}

{% comment %} CSS variables start {% endcomment %}
{%- capture variables -%}
  --image-opacity: {{- image_opacity | append: "%" -}};

  {%- case padding_top -%}
    {%- when 'small' -%}
      --padding-top: 40px;
    {%- when 'medium' -%}
      --padding-top: 76px;
    {%- when 'large' -%}
      --padding-top: 112px;
  {%- endcase -%}

  {%- case padding_bottom -%}
    {%- when 'small' -%}
      --padding-bottom: 40px;
    {%- when 'medium' -%}
      --padding-bottom: 76px;
    {%- when 'large' -%}
      --padding-bottom: 112px;
  {%- endcase -%}

  {%- case padding_top_mobile -%}
    {%- when 'small' -%}
      --padding-top-mobile: 24px;
    {%- when 'medium' -%}
      --padding-top-mobile: 40px;
    {%- when 'large' -%}
      --padding-top-mobile: 60px;
  {%- endcase -%}

  {%- case padding_bottom_mobile -%}
    {%- when 'small' -%}
      --padding-bottom-mobile: 24px;
    {%- when 'medium' -%}
      --padding-bottom-mobile: 40px;
    {%- when 'large' -%}
      --padding-bottom-mobile: 60px;
  {%- endcase -%}

  {%- case rounded_corners -%}
    {%- when 'none' -%}
      --border-radius-rounded-blocks: 0px;
    {%- when 'small' -%}
      --border-radius-rounded-blocks: 8px;
    {%- when 'medium' -%}
      --border-radius-rounded-blocks: 16px;
    {%- when 'large' -%}
      --border-radius-rounded-blocks: 32px;
  {%- endcase -%}
{%- endcapture -%}
{% comment %} CSS variables end {% endcomment %}

<div
  class="account color-{{ color_scheme.id }}{% if padding_top != blank or padding_top_mobile != blank %} account--padding-top{% endif %}{% if padding_bottom != blank or padding_bottom_mobile != blank %} account--padding-bottom{%- endif -%}"
  style="{{- variables | escape -}}"
>
  <div class="account__container container">
    <div class="account__inner{% if show_border %} account__inner--border{%- endif -%}">
      {%- if shop.allow_signup -%}
        <div class="account__top">
          <a href="{{ routes.register_url }}" class="account__button button button--primary button--large">
            {{- create_account_label | default: "Sign up" -}}
          </a>

          <span class="account__button button button--outlined button--large" style="pointer-events: none;">
            {{- login_label | default: "Log in" -}}
            </span>
        </div>
      {%- endif -%}

      <h3 class="account__title text-center">
        {{- title | default: "Log in" -}}
      </h3>

      {%- if description != blank -%}
        <div class="account__divider text-center">
          {{- description -}}
        </div>
      {%- endif -%}

      {%- form 'login' -%}
        <div class="account-fieldset__block">
          <label for="user_email" class="account-fieldset__label">
            {{- email_label | default: "Email" -}}

            <span class="account-fieldset__label-backlight">
              {{- email_label | default: "Email" -}}
            </span>
          </label>

          <input
            value="{{- form.email -}}"
            placeholder=" "
            class="account-fieldset__input"
            autofocus="autofocus"
            autocomplete="email"
            type="email"
            name="user[email]"
            id="user_email">
        </div>

        <div class="account-fieldset__block">
          <label for="user_password" class="account-fieldset__label">
            {{- password_label | default: "Password" -}}

            <span class="account-fieldset__label-backlight">
              {{- password_label | default: "Password" -}}
            </span>
          </label>

          <input
            value="{{- form.password -}}"
            placeholder=" "
            class="account-fieldset__input"
            autocomplete="current-password"
            type="password"
            name="user[password]"
            id="user_password">
        </div>

        {%- if alert -%}
          <div class="account__alert account__alert--danger">
            {{- alert -}}
          </div>
        {%- endif -%}

        {%- if notice -%}
          <div class="account__alert account__alert--info">
            {{- notice -}}
          </div>
        {%- endif -%}

        <div class="account__divider">
          <button
            type="submit"
            class="account__button button button--primary button--large"
            name="commit"
            data-disable-with="Log in"
          >
            {{- login_label | default: "Log in" -}}
          </button>
        </div>

        <div class="account__divider text-center">
          <a href="{{ routes.new_reset_password_url }}" class="account__link">
            {{- reset_password_label | default: "Forgot your password?" -}}
          </a>
        </div>

        {%- if shop.allow_guest_checkout and guest_checkout_url -%}
          <div class="account__divider text-center">
            <a href="{{ guest_checkout_url }}" class="account__button account__button--minimal">
              {{- guest_label | default: "Continue as guest" -}}
            </a>
          </div>
        {%- endif -%}
      {%- endform -%}
    </div>
  </div>
  {%- if image.url != blank -%}
    <div class="account__background-wrapper">
      {%- render 'image',
          image: image,
          class: 'account__background-image',
          size: 'xxl'
      -%}
    </div>
  {%- endif -%}
</div>

