{{ "account.css" | asset_url | stylesheet_tag }}

{%- assign title                 = section.settings.title -%}
{%- assign description           = section.settings.description -%}
{%- assign color_palette         = section.settings.color_palette -%}
{%- assign email_label           = section.settings.email_label -%}
{%- assign password_label        = section.settings.password_label -%}
{%- assign login_label           = section.settings.login_label -%}
{%- assign create_account_label  = section.settings.create_account_label -%}
{%- assign reset_password_label  = section.settings.reset_password_label -%}
{%- assign guest_label           = section.settings.guest_label -%}
{%- assign padding_top           = section.settings.padding_top -%}
{%- assign padding_bottom        = section.settings.padding_bottom -%}
{%- assign padding_top_mobile    = section.settings.padding_top_mobile -%}
{%- assign padding_bottom_mobile = section.settings.padding_bottom_mobile -%}

{% comment %} CSS variables start {% endcomment %}
{%- capture variables -%}
  {%- case padding_top -%}
    {%- when 'small' -%}
      --padding-top: 40px;
    {%- when 'medium' -%}
      --padding-top: 76px;
    {%- when 'large' -%}
      --padding-top: 112px;
  {%- endcase -%}

  {%- case padding_bottom -%}
    {%- when 'small' -%}
      --padding-bottom: 40px;
    {%- when 'medium' -%}
      --padding-bottom: 76px;
    {%- when 'large' -%}
      --padding-bottom: 112px;
  {%- endcase -%}

  {%- case padding_top_mobile -%}
    {%- when 'small' -%}
      --padding-top-mobile: 24px;
    {%- when 'medium' -%}
      --padding-top-mobile: 40px;
    {%- when 'large' -%}
      --padding-top-mobile: 60px;
  {%- endcase -%}

  {%- case padding_bottom_mobile -%}
    {%- when 'small' -%}
      --padding-bottom-mobile: 24px;
    {%- when 'medium' -%}
      --padding-bottom-mobile: 40px;
    {%- when 'large' -%}
      --padding-bottom-mobile: 60px;
  {%- endcase -%}
{%- endcapture -%}
{% comment %} CSS variables end {% endcomment %}

<div
  class="account{% if color_palette != blank %} palette-{{ color_palette }}{% endif %}{% if padding_top != blank or padding_top_mobile != blank %} account--padding-top{% endif %}{% if padding_bottom != blank or padding_bottom_mobile != blank %} account--padding-bottom{%- endif -%}"
  style="{{- variables | escape -}}"
>
  <div class="account__container container">
    <h3 class="account__title text-center">
      {%- if title != blank -%}
        {{- title -}}
      {%- else -%}
        Log in
      {%- endif -%}
    </h3>

    {%- if description != blank -%}
      <div class="account__divider">
        {{- description -}}
      </div>
    {%- endif -%}

    {%- form 'login' -%}
      <div class="account-fieldset__block">
        <label for="user_email" class="account-fieldset__label">
          {%- if email_label != blank -%}
            {{- email_label -}}
          {%- else -%}
            Email
          {%- endif -%}

          <span class="account-fieldset__label-backlight">
            {%- if email_label != blank -%}
              {{- email_label -}}
            {%- else -%}
              Email
            {%- endif -%}
          </span>
        </label>

        <input
          value="{{- form.email -}}"
          placeholder=" "
          class="account-fieldset__input"
          autofocus="autofocus"
          autocomplete="email"
          type="email"
          name="user[email]"
          id="user_email">
      </div>

      <div class="account-fieldset__block account__divider--small">
        <label for="user_password" class="account-fieldset__label">
          {%- if password_label != blank -%}
            {{- password_label -}}
          {%- else -%}
            Password
          {%- endif -%}

          <span class="account-fieldset__label-backlight">
            {%- if password_label != blank -%}
              {{- password_label -}}
            {%- else -%}
              Password
            {%- endif -%}
          </span>
        </label>

        <input
          value="{{- form.password -}}"
          placeholder=" "
          class="account-fieldset__input"
          autocomplete="current-password"
          type="password"
          name="user[password]"
          id="user_password">
      </div>

      <div class="account__divider">
        <a href="{{ routes.new_reset_password_url }}" class="account__link">
          {%- if reset_password_label != blank -%}
            {{- reset_password_label -}}
          {%- else -%}
            Forgot your password?
          {%- endif -%}
        </a>
      </div>

      {%- if alert -%}
        <div class="account__alert account__alert--danger">
          {{- alert -}}
        </div>
      {%- endif -%}

      {%- if notice -%}
        <div class="account__alert account__alert--info">
          {{- notice -}}
        </div>
      {%- endif -%}

      <div class="account__divider">
        <button
          type="submit"
          class="account__button button button--primary button--large"
          name="commit"
          data-disable-with="Log in"
        >
          {%- if login_label != blank -%}
            {{- login_label -}}
          {%- else -%}
            Log in
          {%- endif -%}
        </button>
      </div>

      <hr class="account__separator" />

      <a href="{{ routes.register_url }}" class="account__button button button--outlined button--large">
        {%- if create_account_label != blank -%}
          {{- create_account_label -}}
        {%- else -%}
          Create an account
        {%- endif -%}
      </a>

      <a href="#!" class="account__button account__button--minimal">
        {%- if guest_label != blank -%}
          {{- guest_label -}}
        {%- else -%}
          Continue as guest
        {%- endif -%}
      </a>
    {%- endform -%}
  </div>
</div>

{% include 'script-full-height' %}

