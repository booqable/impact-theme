{{ "account.css" | asset_url | stylesheet_tag }}

{%- assign title                 = section.settings.title -%}
{%- assign description           = section.settings.description -%}
{%- assign color_scheme          = section.settings.color_scheme -%}
{%- assign login_label           = section.settings.login_label -%}
{%- assign signup_label          = section.settings.signup_label -%}
{%- assign name_label            = section.settings.name_label -%}
{%- assign email_label           = section.settings.email_label -%}
{%- assign password_label        = section.settings.password_label -%}
{%- assign password_confirmation = section.settings.password_confirmation -%}
{%- assign account_type_label    = section.settings.account_type_label -%}
{%- assign private_label         = section.settings.private_label -%}
{%- assign company_label         = section.settings.company_label -%}
{%- assign agree_label           = section.settings.agree_label -%}
{%- assign agreements_label      = section.settings.agreements_label -%}
{%- assign padding_top           = section.settings.padding_top -%}
{%- assign padding_bottom        = section.settings.padding_bottom -%}
{%- assign padding_top_mobile    = section.settings.padding_top_mobile -%}
{%- assign padding_bottom_mobile = section.settings.padding_bottom_mobile -%}

{% comment %} CSS variables start {% endcomment %}
{%- capture variables -%}
  {%- case padding_top -%}
    {%- when 'small' -%}
      --padding-top: 40px;
    {%- when 'medium' -%}
      --padding-top: 76px;
    {%- when 'large' -%}
      --padding-top: 112px;
  {%- endcase -%}

  {%- case padding_bottom -%}
    {%- when 'small' -%}
      --padding-bottom: 40px;
    {%- when 'medium' -%}
      --padding-bottom: 76px;
    {%- when 'large' -%}
      --padding-bottom: 112px;
  {%- endcase -%}

  {%- case padding_top_mobile -%}
    {%- when 'small' -%}
      --padding-top-mobile: 24px;
    {%- when 'medium' -%}
      --padding-top-mobile: 40px;
    {%- when 'large' -%}
      --padding-top-mobile: 60px;
  {%- endcase -%}

  {%- case padding_bottom_mobile -%}
    {%- when 'small' -%}
      --padding-bottom-mobile: 24px;
    {%- when 'medium' -%}
      --padding-bottom-mobile: 40px;
    {%- when 'large' -%}
      --padding-bottom-mobile: 60px;
  {%- endcase -%}
{%- endcapture -%}
{% comment %} CSS variables end {% endcomment %}

<div
  class="account color-{{ color_scheme.id }}{% if padding_top != blank or padding_top_mobile != blank %} account--padding-top{% endif %}{% if padding_bottom != blank or padding_bottom_mobile != blank %} account--padding-bottom{%- endif -%}"
  style="{{- variables | escape -}}"
>
  <div class="account__container container">
    <h3 class="account__title text-center">
      {%- if title != blank -%}
        {{- title -}}
      {%- else -%}
        Create an account
      {%- endif -%}
    </h3>

    <div class="account__divider text-center">
      <span>
        {%- if description != blank -%}
          {{- description -}}
        {%- else -%}
          Already have an account?
        {%- endif -%}
      </span>

      <a class="account__link" href="{{ routes.login_url }}">
        {%- if login_label != blank -%}
          {{- login_label -}}
        {%- else -%}
          Log in
        {%- endif -%}
      </a>
    </div>

    {%- form 'register' -%}
      <div class="account-fieldset__block{% if form.errors.name %} account-fieldset--error{%- endif -%}">
        <label for="user_name" class="account-fieldset__label">
          {%- if name_label != blank -%}
            {{- name_label -}}
          {%- else -%}
            Full name
          {%- endif -%}

          <span class="account-fieldset__label-backlight">
            {%- if name_label != blank -%}
              {{- name_label -}}
            {%- else -%}
              Full name
            {%- endif -%}
          </span>
        </label>

        <input
          value="{{- form.name -}}"
          placeholder=" "
          class="account-fieldset__input"
          autofocus="autofocus"
          autocomplete="name"
          type="name"
          name="user[name]"
          id="user_name">

        <div class="account__error-message">
          {{- form.errors.name -}}
        </div>
      </div>

      <div class="account-fieldset__block{% if form.errors.email %} account-fieldset--error{%- endif -%}">
        <label for="user_email" class="account-fieldset__label">
          {%- if email_label != blank -%}
            {{- email_label -}}
          {%- else -%}
            Email
          {%- endif -%}

          <span class="account-fieldset__label-backlight">
            {%- if email_label != blank -%}
              {{- email_label -}}
            {%- else -%}
              Email
            {%- endif -%}
          </span>
        </label>

        <input
          value="{{- form.email -}}"
          placeholder=" "
          class="account-fieldset__input"
          autofocus="autofocus"
          autocomplete="email"
          type="email"
          name="user[email]"
          id="user_email">

        <div class="account__error-message">
          {{- form.errors.email -}}
        </div>
      </div>

      <div class="account-fieldset__block{% if form.errors.password %} account-fieldset--error{%- endif -%}">
        <label for="user_password" class="account-fieldset__label">
          {%- if password_label != blank -%}
            {{- password_label -}}
          {%- else -%}
            Password
          {%- endif -%}

          <span class="account-fieldset__label-backlight">
            {%- if password_label != blank -%}
              {{- password_label -}}
            {%- else -%}
              Password
            {%- endif -%}
          </span>
        </label>

        <input
          placeholder=" "
          class="account-fieldset__input"
          autocomplete="new-password"
          type="password"
          name="user[password]"
          id="user_password">

        <div class="account__error-message">
          {{- form.errors.password -}}
        </div>
      </div>

      <div class="account-fieldset__block{% if form.errors.password_confirmation %} account-fieldset--error{%- endif -%}">
        <label for="user_password_confirmation" class="account-fieldset__label">
          {%- if password_confirmation != blank -%}
            {{- password_confirmation -}}
          {%- else -%}
            Password confirmation
          {%- endif -%}

          <span class="account-fieldset__label-backlight">
            {%- if password_confirmation != blank -%}
              {{- password_confirmation -}}
            {%- else -%}
              Password confirmation
            {%- endif -%}
          </span>
        </label>

        <input
          placeholder=" "
          class="account-fieldset__input"
          autocomplete="new-password"
          type="password"
          name="user[password_confirmation]"
          id="user_password_confirmation">

        <div class="account__error-message">
          {{- form.errors.password_confirmation -}}
        </div>
      </div>

      <div class="account__type account__divider{% if form.errors.customer %} account-fieldset--error{%- endif -%}">
        <span class="account-fieldset__static-label">
          {%- if account_type_label != blank -%}
            {{- account_type_label -}}
          {%- else -%}
            Account type
          {%- endif -%}
        </span>

        <div class="account__type-options">
          <div class="account__type-options--first-option">
            <input
              type="radio"
              name="user[legal_type]"
              id="user_legal_type_person"
              value="person"
              {% if form.legal_type == 'person' %}checked{% endif %}
              style="display: none">

            <label class="account-fieldset__radio-label" for="user_legal_type_person">
              {%- if private_label != blank -%}
                <span>{{- private_label -}}</span>
              {%- else -%}
                <span>Private</span>
              {%- endif -%}
            </label>
          </div>

          <div>
            <input
              type="radio"
              name="user[legal_type]"
              id="user_legal_type_commercial"
              value="commercial"
              {% if form.legal_type == 'commercial' %}checked{% endif %}
              style="display: none">

            <label class="account-fieldset__radio-label" for="user_legal_type_commercial">
              {%- if company_label != blank -%}
                <span>{{- company_label -}}</span>
              {%- else -%}
                <span>Company</span>
              {%- endif -%}
            </label>
          </div>
        </div>

        <div class="account__error-message">
          {{- form.errors.customer -}}
        </div>
      </div>

      <div class="account__type account__divider--small">
        <input
          value="true"
          type="checkbox"
          name="user[agreement_accepted]"
          id="user_agreement_accepted"
          {% if form.agreement_accepted %}checked{% endif %}
          style="display: none">

        <label class="account-checkbox__label" for="user_agreement_accepted">
          <span>
            {%- if agree_label != blank -%}
              {{- agree_label -}}
            {%- else -%}
              I agree to the
            {%- endif -%}

            <a
              class="account__link"
              href="https://booqable.com/agreement"
              target="_blank"
            >
              {%- if agreements_label != blank -%}
                {{- agreements_label -}}
              {%- else -%}
                Terms and agreements
              {%- endif -%}
            </a>
          </span>
        </label>

        <div class="account__error-message">
          {{- form.errors.agreement_accepted -}}
        </div>
      </div>

      {%- if alert -%}
        <div class="account__alert">{{- alert -}}</div>
      {%- endif -%}

      <button
        type="submit"
        class="account__button button button--primary button--large"
        name="commit"
        data-disable-with="Sign up"
      >
        {%- if signup_label != blank -%}
          {{- signup_label -}}
        {%- else -%}
          Sign up
        {%- endif -%}
      </button>
    {%- endform -%}
  </div>
</div>

{% include 'script-full-height' %}

