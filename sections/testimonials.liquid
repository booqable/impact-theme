{%- assign blocks = section.blocks -%}

{%- if blocks.size > 0 -%}

  {{ "testimonials.css" | asset_url | stylesheet_tag }}

  {%- assign show_navigation       = section.settings.show_navigation -%}
  {%- assign show_pagination       = section.settings.show_pagination -%}
  {%- assign color_palette         = section.settings.color_palette -%}
  {%- assign padding_top           = section.settings.padding_top -%}
  {%- assign padding_bottom        = section.settings.padding_bottom -%}
  {%- assign padding_top_mobile    = section.settings.padding_top_mobile -%}
  {%- assign padding_bottom_mobile = section.settings.padding_bottom_mobile -%}
  {%- assign timer                 = section.settings.timer -%}
  {%- assign image_position        = section.settings.image_position -%}

  {%- assign carousel = false -%}

  {%- if blocks.size > 1 -%}
    {{ "carousel.css" | asset_url | stylesheet_tag }}

    {%- assign carousel = true -%}
  {%- endif -%}

  {% comment %} CSS variables start {% endcomment %}
  {%- capture variables -%}
    {%- if carousel -%}
      --slide-width: 100%;
      --slide-width-mobile: 100%;
    {%- endif -%}

    {%- case padding_top -%}
      {%- when 'none' -%}
        --padding-top: 0;
      {%- when 'small' -%}
        --padding-top: 24px;
      {%- when 'medium' -%}
        --padding-top: 68px;
      {%- when 'large' -%}
        --padding-top: 112px;
    {%- endcase -%}

    {%- case padding_bottom -%}
      {%- when 'none' -%}
        --padding-bottom: 0;
      {%- when 'small' -%}
        --padding-bottom: 24px;
      {%- when 'medium' -%}
        --padding-bottom: 68px;
      {%- when 'large' -%}
        --padding-bottom: 112px;
    {%- endcase -%}

    {%- case padding_top_mobile -%}
      {%- when 'none' -%}
        --padding-top-mobile: 0;
      {%- when 'small' -%}
        --padding-top-mobile: 18px;
      {%- when 'medium' -%}
        --padding-top-mobile: 40px;
      {%- when 'large' -%}
        --padding-top-mobile: 60px;
    {%- endcase -%}

    {%- case padding_bottom_mobile -%}
      {%- when 'none' -%}
        --padding-bottom-mobile: 0;
      {%- when 'small' -%}
        --padding-bottom-mobile: 18px;
      {%- when 'medium' -%}
        --padding-bottom-mobile: 40px;
      {%- when 'large' -%}
        --padding-bottom-mobile: 60px;
    {%- endcase -%}

    {%- case image_position -%}
      {%- when 'left' -%}
        --flex-direction-mobile: column-reverse;
        --flex-direction: row-reverse;
        --padding-text: 0;
        --padding-image: 48px;
        --align-items: flex-end;
      {%- when 'right' -%}
        --flex-direction-mobile: column;
        --flex-direction: row;
        --padding-text: 48px;
        --padding-image: 0;
        --align-items: flex-start;
      {%- endcase -%}
  {%- endcapture -%}
  {% comment %} CSS variables end {% endcomment %}

  <div
    class="testimonials__wrapper{% if color_palette != blank %} palette-{{ color_palette }}{% endif %}{% if padding_top != blank or padding_top_mobile != blank %} testimonials__wrapper--padding-top{% endif %}{% if padding_bottom != blank or padding_bottom_mobile != blank %} testimonials__wrapper--padding-bottom{%- endif -%}"
    style="{{- variables | escape -}}"
  >
    <div class="testimonials__container container">
      {%- if carousel -%}
        <div class="carousel carousel__full-width carousel__pause{% if show_navigation %} carousel--controls{%- endif -%}" aria-label="Gallery">
          <input class="carousel__timer" type="hidden" name="hidden" value="{{- timer -}}">
          <div class="carousel__wrapper">
      {%- endif -%}

            {%- for block in blocks -%}
              {%- assign image       = block.settings.image -%}
              {%- assign title       = block.settings.title -%}
              {%- assign description = block.settings.description -%}
              {%- assign name        = block.settings.name -%}
              {%- assign position    = block.settings.position -%}
              {%- assign stars       = block.settings.stars -%}

              {%- if carousel -%}
                <div class="carousel__item">
                  <div class="carousel__inner">
              {%- endif -%}
                    <div class="testimonials__content">
                      {%- if title != blank or description != blank -%}
                        <div class="testimonials__col">
                          {%- if title != blank -%}
                            <h2 class="testimonials__title">
                              {{- title -}}
                            </h2>
                          {%- endif -%}

                          {%- if stars -%}
                            {%- assign stars_full = stars -%}
                            {%- assign stars_empty = stars | plus: 1 -%}

                            <div class="testimonials__stars">
                              {%- for i in (1..stars_full) -%}
                                <span class="testimonials__star">
                                  <i class="fa fa-star" aria-hidden="true"></i>
                                </span>
                              {%- endfor -%}
                              {%- for i in (stars_empty..5) -%}
                                <span class="testimonials__star">
                                  <i class="fa fa-star-o" aria-hidden="true"></i>
                                </span>
                              {%- endfor -%}
                            </div>
                          {%- endif -%}

                          {%- if description != blank -%}
                            <blockquote class="testimonials__blockquote text-medium">
                              <q class="testimonials__quote">
                                {{- description -}}
                              </q>

                              {%- if name != blank or position != blank -%}
                                <cite class="testimonials__cite">
                                  {%- if name != blank -%}
                                    {{- name -}}
                                  {%- endif -%}
                                  {%- if position != blank -%}
                                    <small class="testimonials__small">
                                      {{- position -}}
                                    </small>
                                  {%- endif -%}
                                </cite>
                              {%- endif -%}
                            </blockquote>
                          {%- endif -%}
                        </div>
                      {%- endif -%}

                      {%- if image != blank -%}
                        <div class="testimonials__col">
                          <div class="testimonials__image-wrapper">
                            {%- render 'image',
                                image: image,
                                loading: 'lazy',
                                class: 'testimonials__image',
                                size: 'l'
                            -%}
                          </div>
                        </div>
                      {%- endif -%}
                    </div>
              {%- if carousel -%}
                  </div>
                </div>
              {%- endif -%}
            {%- endfor -%}

      {%- if carousel -%}
          </div>

          {%- if show_navigation -%}
            <div class="carousel__navigation hidden" aria-label="Carousel navigation" aria-hidden="true">
              <span class="carousel__btn prev" title="Prev slide">
                Previous slide
                {%- render 'icon-arrow-right-full' -%}
              </span>
              <span class="carousel__btn next" title="Next slide">
                Next slide
                {%- render 'icon-arrow-right-full' -%}
              </span>
            </div>
          {%- endif -%}

          {%- if show_pagination -%}
            <div class="carousel__pagination hidden" aria-label="Carousel pagination" aria-hidden="true">
              {%- for block in blocks -%}
                {%- assign first = forloop.first -%}
                {%- assign index = forloop.index -%}

                <span class="carousel__dot{% if first %} active{%- endif -%}" data-index="{{- index -}}" title="Jump to slide {{ index }}">
                  Go to slide {{ index }}
                </span>
              {%- endfor -%}
            </div>
          {%- endif -%}
        </div>
      {%- endif -%}
    </div>
  </div>
{%- endif -%}

