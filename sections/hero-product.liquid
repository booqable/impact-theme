{{ "hero.css" | asset_url | stylesheet_tag }}

{%- assign show_datepicker       = section.settings.show_datepicker -%}
{%- assign image                 = section.settings.image -%}
{%- assign color_palette         = section.settings.color_palette -%}
{%- assign padding_top           = section.settings.padding_top -%}
{%- assign padding_bottom        = section.settings.padding_bottom -%}
{%- assign padding_top_mobile    = section.settings.padding_top_mobile -%}
{%- assign padding_bottom_mobile = section.settings.padding_bottom_mobile -%}

{%- if show_datepicker -%}
  {%- if color_palette == "one" -%}
    {%- if settings.accent_background != blank -%}
      {%- assign background_accent = settings.accent_background -%}
    {%- else -%}
      {%- assign background_accent = branding_color -%}
    {%- endif -%}
  {%- elsif color_palette == "two" -%}
    {%- if settings.accent_background_2 != blank -%}
      {%- assign background_accent = settings.accent_background_2 -%}
    {%- else -%}
      {%- assign background_accent = branding_color -%}
    {%- endif -%}
  {%- endif -%}
{%- endif -%}

{% comment %} CSS variables start {% endcomment %}
{%- capture variables -%}
  {%- case padding_top -%}
    {%- when 'none' -%}
      --padding-top: 0;
    {%- when 'small' -%}
      --padding-top: 16px;
    {%- when 'medium' -%}
      --padding-top: 24px;
    {%- when 'large' -%}
      --padding-top: 48px;
  {%- endcase -%}

  {%- case padding_bottom -%}
    {%- when 'none' -%}
      --padding-bottom: 0;
    {%- when 'small' -%}
      --padding-bottom: 16px;
    {%- when 'medium' -%}
      --padding-bottom: 24px;
    {%- when 'large' -%}
      --padding-bottom: 48px;
  {%- endcase -%}

  {%- case padding_top_mobile -%}
    {%- when 'none' -%}
      --padding-top-mobile: 0;
    {%- when 'small' -%}
      --padding-top-mobile: 16px;
    {%- when 'medium' -%}
      --padding-top-mobile: 24px;
    {%- when 'large' -%}
      --padding-top-mobile: 48px;
  {%- endcase -%}

  {%- case padding_bottom_mobile -%}
    {%- when 'none' -%}
      --padding-bottom-mobile: 0;
    {%- when 'small' -%}
      --padding-bottom-mobile: 16px;
    {%- when 'medium' -%}
      --padding-bottom-mobile: 24px;
    {%- when 'large' -%}
      --padding-bottom-mobile: 48px;
  {%- endcase -%}
{%- endcapture -%}
{% comment %} CSS variables end {% endcomment %}

<div class="hero__wrapper{% if color_palette != blank %} palette-{{ color_palette }}{%- endif -%}" style="{{- variables | escape -}}">
  {%- if show_datepicker -%}
    <div class="hero__date-picker date-picker{% if padding_top != blank or padding_top_mobile != blank %} hero__date-picker--padding-top{% endif %}{% if padding_bottom != blank or padding_bottom_mobile != blank %} hero__date-picker--padding-bottom{%- endif -%}">
      <div class="hero__container container">
        <div class="hero__date-picker-component date-picker__component">
          {%- include 'date-picker' -%}
        </div>
      </div>
      <div class="hero__overlay"></div>
    </div>
  {%- endif -%}
</div>

{% include 'script-hero-background' %}

