{{ "hero.css" | asset_url | stylesheet_tag }}

{%- assign title                 = section.settings.title -%}
{%- assign message               = section.settings.message -%}
{%- assign results_label         = section.settings.results_label -%}
{%- assign button_label          = section.settings.button_label -%}
{%- assign image                 = section.settings.image -%}
{%- assign color_palette         = section.settings.color_palette -%}
{%- assign padding_top           = section.settings.padding_top -%}
{%- assign padding_bottom        = section.settings.padding_bottom -%}
{%- assign padding_top_mobile    = section.settings.padding_top_mobile -%}
{%- assign padding_bottom_mobile = section.settings.padding_bottom_mobile -%}
{%- assign background_style      = settings.background_style -%}

{%- if results_count > 0 -%}
  {%- assign show_datepicker = true -%}

  {%- if color_palette == "one" -%}
    {%- assign background_accent = settings.accent_background -%}
  {%- elsif color_palette == "two" -%}
    {%- assign background_accent = settings.accent_background_2 -%}
  {%- endif -%}
{%- endif -%}

{% comment %} CSS variables start {% endcomment %}
{%- capture variables -%}
  {%- case padding_top -%}
    {%- when 'small' -%}
      --padding-top: 43px;
    {%- when 'medium' -%}
      --padding-top: 65px;
    {%- when 'large' -%}
      --padding-top: 85px;
  {%- endcase -%}

  {%- case padding_bottom -%}
    {%- when 'small' -%}
      {%- if results_count > 0  -%}
        --padding-bottom: 22px;
        {%- else -%}
        --padding-bottom: 43px;
      {%- endif -%}
    {%- when 'medium' -%}
      {%- if results_count > 0  -%}
        --padding-bottom: 32px;
      {%- else -%}
        --padding-bottom: 65px;
      {%- endif -%}
    {%- when 'large' -%}
      {%- if results_count > 0  -%}
        --padding-bottom: 43px;
      {%- else -%}
        --padding-bottom: 85px;
      {%- endif -%}
  {%- endcase -%}

  {%- case padding_top_mobile -%}
    {%- when 'small' -%}
      --padding-top-mobile: 30px;
    {%- when 'medium' -%}
      --padding-top-mobile: 40px;
    {%- when 'large' -%}
      --padding-top-mobile: 50px;
  {%- endcase -%}

  {%- case padding_bottom_mobile -%}
    {%- when 'small' -%}
      {%- if results_count > 0  -%}
        --padding-bottom-mobile: 15px;
      {%- else -%}
        --padding-bottom-mobile: 35px;
      {%- endif -%}
    {%- when 'medium' -%}
      {%- if results_count > 0  -%}
        --padding-bottom-mobile: 20px;
      {%- else -%}
        --padding-bottom-mobile: 45px;
      {%- endif -%}
    {%- when 'large' -%}
      {%- if results_count > 0  -%}
        --padding-bottom-mobile: 30px;
      {%- else -%}
        --padding-bottom-mobile: 60px;
      {%- endif -%}
  {%- endcase -%}
{%- endcapture -%}
{% comment %} CSS variables end {% endcomment %}

<div class="hero__wrapper{% if color_palette != blank %} palette-{{ color_palette }}{%- endif -%}" style="{{- variables | escape -}}">
  <div class="hero__container container{% if padding_top != blank or padding_top_mobile != blank %} hero__container--padding-top{% endif %}{% if padding_bottom != blank or padding_bottom_mobile != blank %} hero__container--padding-bottom{%- endif -%}">
    <div class="hero__content">
      {%- if title != blank -%}
        <h1 class="hero__title">{{ title }}: “{{- query -}}”</h1>
      {%- else -%}
        <h1 class="hero__title">{{ page_title }}: “{{- query -}}”</h1>
      {%- endif -%}

      {%- if results_count == 0 -%}
        {%- if message != blank -%}
          <div class="hero__message bq-content rx-content">{{- message -}}</div>
        {%- endif -%}

        {%- if button_label != blank -%}
          <a class="hero__button button button--primary button--large" href="{{ routes.all_products_collection_url }}">{{- button_label -}}</a>
        {%- endif -%}
      {%- else -%}
        <div class="hero__message">
          {{ results_count }} {{ results_label }}
        </div>
      {%- endif -%}
    </div>
  </div>

  {%- if results_count > 0 -%}
    <div class="hero__date-picker date-picker">
      <div class="hero__container container">
        <div class="hero__date-picker-component date-picker__component">
          {%- include 'date-picker' -%}
        </div>
      </div>
      <div class="hero__overlay"></div>
    </div>
  {%- endif -%}

  {%- if image != blank -%}
    <div class="hero__vision{% if show_datepicker %} hero__vision--indent{%- endif -%}">
      <div class="hero__vision-wrapper">
          {%- render 'image',
            image: image,
            loading: 'lazy',
            class: 'hero__image',
            size: 'xxl'
          -%}
      </div>
      <div class="hero__vision-wrapper-overlay container"></div>
    </div>
  {%- else -%}
    {%- unless background_style == 'none' -%}
      <div class="hero__vision{% if show_datepicker %} hero__vision--indent{%- endif -%}">
        {%- if background_style == 'cubes' -%}
          <div class="hero__vision-wrapper">
            {%- render 'image-background-cubes' -%}
            <div class="hero__vision-wrapper-overlay container"></div>
          </div>
        {%- elsif background_style == 'floral' -%}
          <div class="hero__vision-floral-wrapper">
            {%- render 'image-background-flover-1' -%}
          </div>
        {%- endif -%}
      </div>
    {%- endunless -%}
  {%- endif -%}
</div>

{%- if results_count == 0 -%}
  {% include 'script-full-height' %}
{%- endif -%}

{% include 'script-hero-background' %}

