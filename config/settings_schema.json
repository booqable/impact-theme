  {
    "name": "Typography",
    "settings": [
      {
        "type": "header",
        "content": "Font family"
      },
      {
        "type": "font_picker",
        "id": "heading_font",
        "label": "Headings",
        "default": "darker-grotesque"
      },
      {
        "type": "font_picker",
        "id": "body_font",
        "label": "Body text",
        "default": "open-sans"
      },
      {
        "type": "font_picker",
        "id": "tagline_font",
        "label": "Tagline",
        "default": "open-sans"
      },
      {
        "type": "header",
        "content": "Font sizes"
      },
      {
        "type": "number",
        "id": "h1_size",
        "label": "Heading 1",
        "min": 40,
        "max": 80,
        "default": 80,
        "info": "Min: 40, max: 80"
      },
      {
        "type": "number",
        "id": "h2_size",
        "label": "Heading 2",
        "min": 30,
        "max": 70,
        "default": 64,
        "info": "Min: 30, max: 70"
      },
      {
        "type": "number",
        "id": "h3_size",
        "label": "Heading 3",
        "min": 25,
        "max": 65,
        "default": 56,
        "info": "Min: 25, max: 65"
      },
      {
        "type": "number",
        "id": "tagline_size",
        "label": "Tagline",
        "min": 14,
        "max": 30,
        "default": 20,
        "info": "Min: 14, max: 30"
      },
      {
        "type": "number",
        "id": "large_text_size",
        "label": "Large text",
        "min": 18,
        "max": 28,
        "default": 18,
        "info": "Min: 18, max: 28"
      },
      {
        "type": "number",
        "id": "regular_text_size",
        "label": "Regular text",
        "min": 12,
        "max": 20,
        "default": 16,
        "info": "Min: 12, max: 20"
      }
    ]
  },
