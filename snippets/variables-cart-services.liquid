{% style %}
  bq-cart-services {
    line-height: var(--line-height-sm);
    --services-container-background: var(--color-azureish-white);
    --services-text-color: var(--color-black);
    --services-container-padding: 16px;
    --services-container-border-radius: var(--border-radius-none);
    --service-title-font-size: 18px;
    --service-name-font-size: 16px;
    --service-price-font-size: 16px;
    --service-checkbox-border-radius: var(--border-radius-none);
    --service-checkbox-size: 20px;
    --service-checkbox-border: 1px solid var(--color-border);
    --service-checkbox-color: var(--background-primary);
    --service-checkbox-color-checked: var(--background-accent);
    --service-checkbox-icon-color: var(--color-accent);
  }
{% endstyle %}
