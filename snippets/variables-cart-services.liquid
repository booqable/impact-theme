{% style %}
  bq-cart-services {
    line-height: var(--line-height-sm, 1.2);
    --services-container-background: var(--color-azureish-white, #D7E2FF);
    --services-text-color: var(--color-black, #1A3333);
    --services-container-padding: 16px;
    --services-container-border-radius: var(--border-radius, 0);
    --service-title-font-size: 18px;
    --service-name-font-size: 16px;
    --service-price-font-size: 16px;
    --service-checkbox-border-radius: var(--border-radius, 0);
    --service-checkbox-size: 20px;

    {% if color_palette == "one" %}
      {% if settings.primary_color != blank %}
        --service-checkbox-border: 1px solid var(--color-border, #1A333326);
      {% endif %}

      {% if settings.background != blank %}
        --service-checkbox-color: var(--background-primary, #FFFFFF);
      {% endif %}

      {% if settings.accent_background != blank %}
        --service-checkbox-color-checked: var(--background-accent, #1A3333);
      {% endif %}

      {% if settings.accent_color != blank %}
        --service-checkbox-icon-color: var(--color-accent, #FFFFFF);
      {% endif %}

    {% elsif color_palette == "two" %}
      {% if settings.primary_color_2 != blank %}
        --service-checkbox-border: 1px solid var(--color-border-2, #FFFFFF47);
      {% endif %}

      {% if settings.background_2 != blank %}
        --service-checkbox-color: var(--background-primary-2, #1A3333);
      {% endif %}

      {% if settings.accent_background_2 != blank %}
        --service-checkbox-color-checked: var(--background-accent-2, #FFFFFF);
      {% endif %}

      {% if settings.accent_color_2 != blank %}
        --service-checkbox-icon-color: var(--color-accent-2, #1A3333);
      {% endif %}
    {% endif %}
  }
{% endstyle %}
