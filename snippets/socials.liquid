{% comment %}

  This snippet is used for rendering the social networks icons

  Usage:

  {%- include 'socials' -%}

{% endcomment %}

{% style %}
  .social-networks {
    display: flex;
    margin: 0 calc(-1 * var(--social-spacing, 6px));
  }

  .social-networks__item {
    margin: 0 var(--social-spacing, 6px);
  }
{% endstyle %}

<ul class="social-networks">
  {% if settings.social_facebook_link != blank %}
    <li class="social-networks__item">
      <a href="{{ settings.social_facebook_link }}" target="_blank" class="social-networks__link">
        <i class="fa-brands fa-facebook-f"></i>
      </a>
    </li>
  {% endif %}
  {% if settings.social_instagram_link != blank %}
