{% style %}
  bq-minicart-button {
    --minicart-button-size: 22px;
    --minicart-button-badge-size: 12px;
    --minicart-button-border-radius: var(--border-radius-circle);
    --minicart-button-font-size: 14px;
    --minicart-button-padding: 4px;
    --minicart-button-hover-opacity: 1;
    --minicart-button-transition-duration: var(--animation-duration);
    --minicart-button-font: var(--font-body, --minicart-font, sans-serif);

    {%- if color_palette == "one" -%}
      --minicart-button-color: var(--background-primary-1);
      --minicart-button-accent-color: var(--background-accent-1);
      --minicart-button-badge-color: var(--color-accent-1);
      --minicart-button-hover-color: var(--color-outline-1-hover);
    {%- elsif color_palette == "two" -%}
      --minicart-button-color: var(--background-primary-2);
      --minicart-button-accent-color: var(--background-accent-2);
      --minicart-button-badge-color: var(--color-accent-2);
      --minicart-button-hover-color: var(--color-outline-2-hover);
    {%- elsif color_palette == "three" -%}
      --minicart-button-color: var(--background-primary-3);
      --minicart-button-accent-color: var(--background-accent-3);
      --minicart-button-badge-color: var(--color-accent-3);
      --minicart-button-hover-color: var(--color-outline-3-hover);
    {%- elsif color_palette == "four" -%}
      --minicart-button-color: var(--background-primary-4);
      --minicart-button-accent-color: var(--background-accent-4);
      --minicart-button-badge-color: var(--color-accent-4);
      --minicart-button-hover-color: var(--color-outline-4-hover);
    {%- elsif color_palette == "five" -%}
      --minicart-button-color: var(--background-primary-5);
      --minicart-button-accent-color: var(--background-accent-5);
      --minicart-button-badge-color: var(--color-accent-5);
      --minicart-button-hover-color: var(--color-outline-5-hover);
    {%- endif -%}
  }

  .page-scrolled .header-transparent bq-minicart-button,
  .header__inner-background bq-minicart-button,
  .header__inner:has(#search-opener:checked) bq-minicart-button,
  .header__inner:has(#mobile-menu-opener:checked) bq-minicart-button  {
    {%- if color_palette == "one" -%}
      --minicart-button-color: var(--color-primary-1);
    {%- elsif color_palette == "two" -%}
      --minicart-button-color: var(--color-primary-2);
    {%- elsif color_palette == "three" -%}
      --minicart-button-color: var(--color-primary-3);
    {%- elsif color_palette == "four" -%}
      --minicart-button-color: var(--color-primary-4);
    {%- elsif color_palette == "five" -%}
      --minicart-button-color: var(--color-primary-5);
    {%- endif -%}
  }
{% endstyle %}
