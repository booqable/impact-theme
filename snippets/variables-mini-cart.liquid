{% style %}
  bq-minicart-button {
    --minicart-button-size: 22px;
    --minicart-button-badge-size: 12px;
    --minicart-button-border-radius: var(--border-radius-circle);
    --minicart-button-font-size: 14px;
    --minicart-button-padding: 4px;
    --minicart-button-hover-opacity: 1;
    --minicart-button-transition-duration: var(--animation-duration);
    --minicart-button-font: var(--font-body, --minicart-font, sans-serif);

    {%- if color_palette == "one" -%}
      {%- if settings.primary_color_1 != blank -%}
        --minicart-button-color: var(--color-primary-1);
      {%- endif -%}

      {%- if settings.accent_background_1 != blank -%}
        --minicart-button-accent-color: var(--background-accent-1);
      {%- endif -%}

      {% if settings.accent_color_1 != blank %}
        --minicart-button-badge-color: var(--color-accent-1);
      {% endif %}

      {%- if settings.accent_outline_1 != blank -%}
        --minicart-button-hover-color: var(--color-outline-1-hover);
      {%- endif -%}

    {%- elsif color_palette == "two" -%}
      {%- if settings.primary_color_2 != blank -%}
        --minicart-button-color: var(--color-primary-2);
      {%- endif -%}

      {%- if settings.accent_background_2 != blank -%}
        --minicart-button-accent-color: var(--background-accent-2);
      {%- endif -%}

      {% if settings.accent_color_2 != blank %}
        --minicart-button-badge-color: var(--color-accent-2);
      {% endif %}

      {%- if settings.accent_outline_2 != blank -%}
        --minicart-button-hover-color: var(--color-outline-2-hover);
      {%- endif -%}
    {%- endif -%}
  }
{% endstyle %}
